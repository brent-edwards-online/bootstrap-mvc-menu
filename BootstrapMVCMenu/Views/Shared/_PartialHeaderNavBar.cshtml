<h1>@ViewContext.RouteData.Values["Action"]</h1>
@{
    var currentAction = ViewContext.RouteData.Values["Action"].ToString();

    var menuItems = new List<MenuItem>()
    {
        new MenuItem(){ Controller="Home", Action="Index" },
        new MenuItem(){ Controller="Home", Action="About" },
        new MenuItem(){ Controller="Home", Action="Contact" }
    };
}

<nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">BootstrapMVCMenu</a>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                @foreach (var menuItem in menuItems)
    {
            @if (menuItem.Action == currentAction)
{
            <li class="active"><a asp-area="" asp-controller="@menuItem.Controller" asp-action="@menuItem.Action">@menuItem.Action</a></li>
}
else
{
            <li><a asp-area="" asp-controller="@menuItem.Controller" asp-action="@menuItem.Action">@menuItem.Action</a></li>
}

}
            </ul>
        </div>
    </div>
</nav>


